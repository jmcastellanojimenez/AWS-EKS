{
  "mcpServers": {
    "aws-infrastructure": {
      "command": "uvx",
      "args": ["awslabs.aws-infrastructure-mcp-server@latest"],
      "env": {
        "AWS_REGION": "us-east-1",
        "FASTMCP_LOG_LEVEL": "ERROR"
      },
      "disabled": false,
      "optimization": {
        "connection_pooling": true,
        "request_batching": true,
        "rate_limiting": "100_requests_per_minute",
        "result_caching": "300s",
        "timeout": "30s"
      },
      "autoApprove": [
        "describe-*",
        "list-*",
        "get-*",
        "get-cost-*",
        "get-dimension-*",
        "get-metric-*",
        "describe-alarms",
        "describe-spot-*",
        "get-bucket-*"
      ]
    },
    
    "kubernetes-management": {
      "command": "uvx",
      "args": ["kubernetes-mcp-server@latest"],
      "env": {
        "KUBECONFIG": "~/.kube/config",
        "FASTMCP_LOG_LEVEL": "ERROR"
      },
      "disabled": false,
      "optimization": {
        "context_caching": true,
        "watch_optimization": true,
        "resource_filtering": true,
        "batch_operations": true,
        "timeout": "60s"
      },
      "autoApprove": [
        "get",
        "describe",
        "logs",
        "top",
        "port-forward",
        "proxy",
        "explain",
        "api-resources",
        "api-versions"
      ]
    },
    
    "prometheus-metrics": {
      "command": "uvx",
      "args": ["prometheus-mcp-server@latest"],
      "env": {
        "PROMETHEUS_URL": "http://prometheus-server.observability.svc.cluster.local:80",
        "FASTMCP_LOG_LEVEL": "ERROR"
      },
      "disabled": false,
      "optimization": {
        "query_optimization": true,
        "result_caching": "300s",
        "batch_queries": true,
        "query_timeout": "30s",
        "max_concurrent_queries": 10
      },
      "autoApprove": [
        "query",
        "query_range",
        "series",
        "label_names",
        "label_values",
        "targets",
        "metadata",
        "config",
        "flags"
      ]
    },
    
    "github-actions": {
      "command": "uvx",
      "args": ["github-actions-mcp-server@latest"],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}",
        "GITHUB_REPOSITORY": "${GITHUB_REPOSITORY}",
        "FASTMCP_LOG_LEVEL": "ERROR"
      },
      "disabled": false,
      "optimization": {
        "api_rate_limiting": true,
        "request_caching": "600s",
        "batch_operations": true,
        "timeout": "45s"
      },
      "autoApprove": [
        "list-workflows",
        "get-workflow",
        "list-workflow-runs",
        "get-workflow-run",
        "list-jobs",
        "get-job",
        "download-artifact",
        "list-artifacts"
      ]
    },
    
    "loki-logs": {
      "command": "uvx",
      "args": ["loki-mcp-server@latest"],
      "env": {
        "LOKI_URL": "http://loki-query-frontend.observability.svc.cluster.local:3100",
        "FASTMCP_LOG_LEVEL": "ERROR"
      },
      "disabled": false,
      "optimization": {
        "query_optimization": true,
        "result_streaming": true,
        "query_caching": "180s",
        "max_query_range": "24h",
        "timeout": "60s"
      },
      "autoApprove": [
        "query",
        "query_range",
        "labels",
        "label_values",
        "series",
        "tail"
      ]
    },
    
    "grafana-dashboards": {
      "command": "uvx",
      "args": ["grafana-mcp-server@latest"],
      "env": {
        "GRAFANA_URL": "http://grafana.observability.svc.cluster.local:3000",
        "GRAFANA_TOKEN": "${GRAFANA_TOKEN}",
        "FASTMCP_LOG_LEVEL": "ERROR"
      },
      "disabled": false,
      "optimization": {
        "dashboard_caching": true,
        "api_rate_limiting": true,
        "result_compression": true,
        "timeout": "30s"
      },
      "autoApprove": [
        "search-dashboards",
        "get-dashboard",
        "get-datasources",
        "test-datasource",
        "get-annotations",
        "search-folders"
      ]
    }
  },
  
  "globalOptimization": {
    "connectionManagement": {
      "maxConnectionsPerServer": 10,
      "connectionTimeout": "30s",
      "idleTimeout": "300s",
      "keepAlive": true
    },
    
    "requestOptimization": {
      "requestBatching": true,
      "batchSize": 50,
      "batchTimeout": "100ms",
      "retryPolicy": "exponential_backoff",
      "maxRetries": 3
    },
    
    "responseCaching": {
      "enabled": true,
      "defaultCacheDuration": "300s",
      "cacheSize": "100MB",
      "cacheCompression": true,
      "cacheInvalidation": "smart"
    },
    
    "performanceMonitoring": {
      "enabled": true,
      "metricsCollection": true,
      "latencyTracking": true,
      "errorRateMonitoring": true,
      "throughputMeasurement": true
    }
  },
  
  "workflowSpecificOptimization": {
    "foundation": {
      "priorityServers": ["aws-infrastructure", "kubernetes-management"],
      "cacheStrategy": "aggressive",
      "timeoutMultiplier": 1.5
    },
    
    "observability": {
      "priorityServers": ["prometheus-metrics", "loki-logs", "grafana-dashboards"],
      "cacheStrategy": "moderate",
      "queryOptimization": true
    },
    
    "cost-optimization": {
      "priorityServers": ["aws-infrastructure"],
      "cacheStrategy": "minimal",
      "realTimeUpdates": true
    },
    
    "deployment": {
      "priorityServers": ["kubernetes-management", "github-actions"],
      "cacheStrategy": "minimal",
      "parallelExecution": true
    }
  }
}